<Window x:Class="BeeHealthy.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="200" Width="400">
    <Grid>
        <!-- Felhasználónév -->
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,10,0,0"/>

        <!-- Jelszó -->
        <Label Content="Jelszó:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,50,0,0"/>

        <!-- Bejelentkezés gomb -->
        <Button Content="Bejelentkezés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="120,100,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>