<Window x:Class="BeeHealthyLoginClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeeHealthyLoginClient"
        mc:Ignorable="d"
        Title="BeeHealthy" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Bejelentkezés"
                      Click="OpenLoginWindow"
                      Name="mitemBejelentkezes"/>
            <MenuItem Header="Felhasználók" 
                      IsEnabled="False"
                      Name="mitemFelhasznalok">
                <MenuItem Header="Felhasználók listázása"
                          Click="UserListWindow"/>
                <MenuItem Header="Felhasználó rögzítése"
                          Click="NewUserWindow"/>
                <MenuItem Header="Felhasználó módosítása/törlése"
                          Click="EditUserWindow"/>
            </MenuItem>
            <MenuItem Header="Gyógyszerek" 
                      IsEnabled="False"
                      Name="mitemGyogyszerek">
                <MenuItem Header="Gyógyszerek listázása"
                        Click="MedicineListWindow"/>
                <MenuItem Header="Gyógyszer rögzítése"
                      Click="NewMedicineWindow"/>
                <MenuItem Header="Gyógyszer módosítása/törlése"
                      Click="EditMedicineWindow"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
