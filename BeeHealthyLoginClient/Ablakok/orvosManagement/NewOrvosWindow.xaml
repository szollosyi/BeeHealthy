<Window x:Class="BeeHealthyLoginClient.Ablakok.orvosManagement.NewOrvosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeeHealthyLoginClient.Ablakok.orvosManagement"
        mc:Ignorable="d"
        Title="NewOrvosWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Orvos neve:</Label>
            <TextBox x:Name="tbxOrvosNev"/>
            <Label>Orvos beosztása:</Label>
            <ComboBox x:Name="cbxBeosztas"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Mentés" Margin="5" Padding="10" Click="Mentes"/>
            <Button Content="Mésge" Margin="5" Padding="10" Click="Megse"/>
        </StackPanel>
    </Grid>
</Window>
