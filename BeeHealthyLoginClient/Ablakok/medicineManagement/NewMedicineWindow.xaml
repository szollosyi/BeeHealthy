<Window x:Class="BeeHealthyLoginClient.medicineManagement.NewMedicineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeeHealthyLoginClient.medicineManagement"
        mc:Ignorable="d"
        Title="NewMedicineWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Gyógyszernév:</Label>
            <TextBox x:Name="tbxGyogyszerNev"/>
            <Label>Gyártó Id:</Label>
            <ComboBox x:Name="cbxGyartoId"
                      DisplayMemberPath="Nev"
                      SelectedValuePath="Id"/>
            <Label>Kategória:</Label>
            <ComboBox x:Name="cbxKategoria"
                      DisplayMemberPath="Kategoria"
                      SelectedValuePath="Kategoria"/>
            <Label>Megjegyzés:</Label>
            <TextBox x:Name="tbxMegjegyzes"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Mentés" Margin="5" Padding="10" Click="Mentes"/>
            <Button Content="Mésge" Margin="5" Padding="10" Click="Megse"/>
        </StackPanel>
    </Grid>
</Window>
