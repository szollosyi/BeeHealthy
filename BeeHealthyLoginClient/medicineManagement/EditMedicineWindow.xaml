<Window x:Class="BeeHealthyLoginClient.medicineManagement.EditMedicineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeeHealthyLoginClient.medicineManagement"
        mc:Ignorable="d"
        Title="EditMedicineWindow" Height="425" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Gyógyszernév:</Label>
            <TextBox x:Name="tbxGyogyszerNev"/>
            <Label>Gyártó Id:</Label>
            <ComboBox x:Name="cbxGyartoId"/>
            <Label>Kategória:</Label>
            <TextBox x:Name="tbxKategoria"/>
            <Label>Adagolás:</Label>
            <TextBox x:Name="tbxAdagolas"/>
            <Label>Kezelési időpont:</Label>
            <TextBox x:Name="tbxKezelesiIdopont"/>
            <Label>Kezelés időtartama:</Label>
            <DatePicker x:Name="DprKezelesIdo"/>
            <Label>Megjegyzés:</Label>
            <TextBox x:Name="tbxMegjegyzes"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Törlés" Margin="5" Padding="10" Click="Torles"/>
            <Button Content="Módosítás" Margin="5" Padding="10" Click="Modositas"/>
            <Button Content="Mésge" Margin="5" Padding="10" Click="Megse"/>
        </StackPanel>
    </Grid>
</Window>
